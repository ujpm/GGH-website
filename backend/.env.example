# MongoDB Configuration
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>
# Example: mongodb+srv://myuser:mypassword@cluster0.xxxxx.mongodb.net/ggh_website

# Server Configuration
PORT=5000
NODE_ENV=development # Options: development, production

# Authentication
JWT_SECRET=your_jwt_secret_key_here
# Used for signing and verifying JWT tokens for user authentication

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
# Required for Google OAuth authentication. Get from Google Cloud Console

# Admin User (for seeding)
ADMIN_EMAIL=admin@globalgrantshub.org
ADMIN_PASSWORD=your_secure_admin_password_here
# Used for creating initial admin user during database seeding
