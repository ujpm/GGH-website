{
  "build": {
    "baseDirectory": ".",
    "command": "npm run cloudflare:build",
    "outputDirectory": "dist",
    "rootDirectory": "."
  },
  "routes": [
    { "src": "/api/*", "dest": "https://backendggh.vercel.app/api/$1" },
    { "src": "/grants/*", "dest": "/index.html", "status": 200 },
    { "src": "/scholarships/*", "dest": "/index.html", "status": 200 },
    { "src": "/resources/*", "dest": "/index.html", "status": 200 },
    { "src": "/dashboard/*", "dest": "/index.html", "status": 200 },
    { "src": "/*", "dest": "/index.html", "status": 200 }
  ],
  "headers": {
    "/*": {
      "X-Frame-Options": "DENY",
      "X-Content-Type-Options": "nosniff",
      "Referrer-Policy": "strict-origin-when-cross-origin"
    }
  }
}
